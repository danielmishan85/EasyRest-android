<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TablesFragment">

    <Button
        android:id="@+id/openTable_drinksBtn"
        android:layout_width="101dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="Drinks"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openTable_dessertBtn"
        android:layout_width="101dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="Dessert"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toStartOf="@+id/openTable_drinksBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openTable_mainBtn"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="Main"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toStartOf="@+id/openTable_dessertBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openTable_startesBtn"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="Startes"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toStartOf="@+id/openTable_mainBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuList"
        android:layout_width="420dp"
        android:layout_height="700dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openTable_dessertBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>